



.join-room {
  box-sizing: border-box;
  margin-top: 30vh;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 40rpx;
}
.join-room .title{
  padding: 20rpx;
}
.join-room .input-group {
  display: flex;
  flex-direction: row;
  /* border: 1px solid #f00; */
  height: 90rpx;
  width: 100%;
}
.join-room .input-group input {
  box-sizing: border-box;
  flex: 1;
  background-color: rgba(255,255,255,0.001);
  border: 1rpx solid #27ae60;
  border-right: 0px;
  font-size: 28rpx;
  height: 100%;
  border-top-left-radius: 90rpx;
  border-bottom-left-radius: 90rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
}
.join-room .input-group button {
  box-sizing: border-box;
  height: 100%;
  width: 150rpx;
  border-top-right-radius: 90rpx;
  border-bottom-right-radius: 90rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  border: 0rpx;
  /* background-color: #fff; */
  font-size: 28rpx;
  padding: 0rpx;
  line-height: 90rpx;
  background-color: #27ae60;
  color: #fff;
  /* border: 2px solid #27ae60; */
  border: 1rpx solid #27ae60;
  border-left: 0px;
}
.join-room .input-group button:after {
  border: 0px;
  border-radius: 0px;
}
.join-room .input-group button:active {
  background-color: #2ecc71;
}